<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/livesLayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="16dp">

        <ImageView
            android:id="@+id/life1"
            android:src="@drawable/heart"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ImageView
            android:id="@+id/life2"
            android:src="@drawable/heart"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ImageView
            android:id="@+id/life3"
            android:src="@drawable/heart"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rockGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView android:id="@+id/rock00" android:layout_width="80dp" android:layout_height="80dp"
                android:layout_margin="6dp" android:src="@drawable/asteroid" android:visibility="invisible" />
            <ImageView android:id="@+id/rock01" android:layout_width="80dp" android:layout_height="80dp"
                android:layout_margin="6dp" android:src="@drawable/asteroid" android:visibility="invisible" />
            <ImageView android:id="@+id/rock02" android:layout_width="80dp" android:layout_height="80dp"
                android:layout_margin="6dp" android:src="@drawable/asteroid" android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView android:id="@+id/rock10" android:layout_width="80dp" android:layout_height="80dp"
                android:layout_margin="6dp" android:src="@drawable/asteroid" android:visibility="invisible" />
            <ImageView android:id="@+id/rock11" android:layout_width="80dp" android:layout_height="80dp"
                android:layout_margin="6dp" android:src="@drawable/asteroid" android:visibility="invisible" />
            <ImageView android:id="@+id/rock12" android:layout_width="80dp" android:layout_height="80dp"
                android:layout_margin="6dp" android:src="@drawable/asteroid" android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView android:id="@+id/rock20" android:layout_width="80dp" android:layout_height="80dp"
                android:layout_margin="6dp" android:src="@drawable/asteroid" android:visibility="invisible" />
            <ImageView android:id="@+id/rock21" android:layout_width="80dp" android:layout_height="80dp"
                android:layout_margin="6dp" android:src="@drawable/asteroid" android:visibility="invisible" />
            <ImageView android:id="@+id/rock22" android:layout_width="80dp" android:layout_height="80dp"
                android:layout_margin="6dp" android:src="@drawable/asteroid" android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView android:id="@+id/rock30" android:layout_width="80dp" android:layout_height="80dp"
                android:layout_margin="6dp" android:src="@drawable/asteroid" android:visibility="invisible" />
            <ImageView android:id="@+id/rock31" android:layout_width="80dp" android:layout_height="80dp"
                android:layout_margin="6dp" android:src="@drawable/asteroid" android:visibility="invisible" />
            <ImageView android:id="@+id/rock32" android:layout_width="80dp" android:layout_height="80dp"
                android:layout_margin="6dp" android:src="@drawable/asteroid" android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView android:id="@+id/rock40" android:layout_width="80dp" android:layout_height="80dp"
                android:layout_margin="6dp" android:src="@drawable/asteroid" android:visibility="invisible" />
            <ImageView android:id="@+id/rock41" android:layout_width="80dp" android:layout_height="80dp"
                android:layout_margin="6dp" android:src="@drawable/asteroid" android:visibility="invisible" />
            <ImageView android:id="@+id/rock42" android:layout_width="80dp" android:layout_height="80dp"
                android:layout_margin="6dp" android:src="@drawable/asteroid" android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/carsRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/car0"
            android:src="@drawable/car"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/car1"
            android:src="@drawable/car"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/car2"
            android:src="@drawable/car"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnLeft"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/leftarrow"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp" />

    <ImageButton
        android:id="@+id/btnRight"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/rightarrow"
        android:scaleType="centerInside" />

</RelativeLayout>
